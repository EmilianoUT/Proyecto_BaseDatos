<h1>Proyecto Tercera Unidad</h1>

<section class="insert">

    <h3>Register</h3>

    <form action="/insert" method="post">
        <div class="input">
            <label for="address">Address</label>
            <input type="text" id="address" name="address">
        </div>

        <div class="input">
            <label for="city">City</label>
            <input type="text" id="city" name="city">
        </div>

        <div class="input">
            <label for="country">Country</label>
            <input type="text" id="country" name="country">
        </div>

        <div class="input">
            <label for="district">District</label>
            <input type="text" id="district" name="district">
        </div>

        <div class="input">
            <label for="firstname">First Name</label>
            <input type="text" id="name" name="name">
        </div>

        <div class="input">
            <label for="lastname">Last Name</label>
            <input type="text" id="surname" name="surname">
        </div>

        <button type="submit">Done</button>
    </form>
</section>




<section class="get">
    <h3>All Customers</h3>
    <a href="/get-data">Show</a>
    <div>
        {{# each items }}
        <article class="item">
            <div>Address: {{ this.Address }}</div>
            <div>City: {{ this.City }}</div>
            <div>Country: {{ this.Country }}</div>
            <div>District: {{ this.District }}</div>
            <div>Last Name: {{ this.LastName }}</div>
            <div>First Name: {{ this.FirstName }}</div>
            <div>Status: {{ this.Status }}</div>
            <div>ID: {{ this._id }}</div>
        </article>
        {{/each}}
    </div>
</section>

<br>

<section class="update">
    <h3>Update</h3>
    <form action="/update" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="address">Address</label>
            <input type="text" id="address" name="address">
        </div>

        <div class="input">
            <label for="city">City</label>
            <input type="text" id="city" name="city">
        </div>

        <div class="input">
            <label for="country">Country</label>
            <input type="text" id="country" name="country">
        </div>

        <div class="input">
            <label for="district">District</label>
            <input type="text" id="district" name="district">
        </div>

        <div class="input">
            <label for="firstname">First Name</label>
            <input type="text" id="name" name="name">
        </div>

        <div class="input">
            <label for="lastname">Last Name</label>
            <input type="text" id="surname" name="surname">
        </div>
        <button type="submit">UPDATE</button>
    </form>
</section>
</section>


<section class="delete">
    <h3>Delete</h3>
    <form action="/delete" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <button type="submit">DELETE</button>
    </form>
</section>

<section class="plac">
    <h3>Places</h3>
    <a href="/get-places">Show</a>
    <div>
        {{# each places }}
        <article class="item">
            <div>Address: {{ this.Address }}</div>
            <div>City: {{ this.City }}</div>
            <div>Country: {{ this.Country }}</div>
            <div>District: {{ this.District }}</div>
            <div>Name: {{ this.Name }}</div>
            <div>Price: {{ this.Price }}</div>
            <div>Available: {{ this.Available }}</div>
            <div>Type: {{ this.Type }}</div>
        </article>
        {{/each}}
    </div>
</section>